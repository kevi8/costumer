@model Login
<form class="mx-1 mx-md-4" asp-action="Login" method="post">
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="email" id="form3Example3c" class="form-control" asp-for="LoginEmail" />
            <label class="form-label" for="form3Example3c" asp-for="LoginEmail">Your Email</label>
            <span asp-validation-for="LoginEmail"></span>
        </div>
        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="submit" value="Login" class="btn btn-primary btn-lg">LogIn</button>
        </div>
    </div>
</form>